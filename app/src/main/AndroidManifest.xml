<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cursofyb.test.myresto02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListPlatos"
            android:label="@string/title_activity_list_platos"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PagarActivity"
            android:label="@string/title_activity_pagar"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".PedidoIntentService"
            android:exported="false" />
        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".MyPedidoIntentService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".ReceptorPedidoListo"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>