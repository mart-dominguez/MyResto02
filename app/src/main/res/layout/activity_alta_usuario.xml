<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cursofyb.test.myresto02.AltaUsuario">

    <TextView
        android:id="@+id/usrNombreLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GESTION DEL USUARIO"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/usrNombreTxt"
        android:text="NOMBRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/usrNombreTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/usrMailLbl"
        android:text="Mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/usrMailTxt"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/usrUbicacionLbl"
        android:text="Ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/usrUbicacionTxt"
            android:layout_width="wrap_content"
            android:minEms="12"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnBuscarUbicMapa"
            android:text="Buscar!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btnGuardarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
