<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cursofyb.test.myresto02.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Cuenta"/>
    <ImageButton
        android:id="@+id/btnCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_weight="0.22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pedir"/>
    <ImageButton
        android:id="@+id/btnPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
        android:layout_weight="0.23" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagos"/>
    <ImageButton
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_credit_card_black_24dp"
        android:layout_weight="0.17" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguir Pedido"/>
    <ImageButton
        android:id="@+id/btnVerRuta"
        app:srcCompat="@drawable/ic_motorcycle_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Plato"/>
    <ImageButton
        android:id="@+id/btnAltaPlato"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21" />


</LinearLayout>

